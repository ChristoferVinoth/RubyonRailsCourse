<h1 align="center"> List of Users</h1>
<div align="center">
  <%= will_paginate %>
  <% @users.each do |u| %>
    <ul class="listing center">
      <div clss="row">
        <div class="well col-md-offset-1">
          <%= link_to gravatar_for(u), user_path(u) %>
          <p class="article-title">
            <%= link_to u.username, user_path(u) %>
          </p>
          <p><small> <%= pluralize(u.articles.count, "article") if u.articles %> </small></p>
          <% if logged_in? && current_user.admin? %>
                <li> <%= link_to "Delete this user", user_path(u), method: :delete, data: {confirm: " Are you sure?"} %></li>
          <% end %>
        </div>
      </div>
    </ul>
    <% end %>
    <%= will_paginate %>
</div>
